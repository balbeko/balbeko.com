<% @webcams.each do |cam| %>
  <article>

    <h1><%= cam[:h1] %></h1>
    <h2><%= cam[:h2] %></h2>
    <div class="share">
      <div class="share42init" data-title="<%= cam[:h1] + " (" + cam[:h2] +")" %>"></div>
    </div>
    <object type="application/x-shockwave-flash" data="http://marathon.infocity.kharkov.ua/wp-content/plugins/stream-video-player/player.swf?ver=1.3.3" width="760" height="430" name="svdo_0">
      <param name="quality" value="high">
      <param name="allowfullscreen" value="true">
      <param name="allowscriptaccess" value="always">
      <param name="flashvars" value="controlbar=over&amp;dock=true&amp;autostart=<%= cam[:autostart] %>&amp;volume=90&amp;provider=rtmp&amp;streamer=rtmp://stream.city.kharkov.ua:1935/elka&amp;file=<%= cam[:file] %>&amp;responsive=16:9&amp;stretching=exactfit&amp;logo.hide=true&amp;logo.position=top-left&amp;logo.file=&amp;logo.out=1&amp;screencolor=292929&amp;logo.link=&amp;bufferlength=5&amp;image=<%= cam[:placeholder] %>">
      <!--[if !IE]>-->
      <video data="<%= cam[:placeholder] %>" class="videoWrapper wideScreen" controls="" autobuffer="">
        <source src="http://stream.city.kharkov.ua:1935/velo/<%= cam[:file] %>/playlist.m3u8" type="video/mp4">
      </video>
      <!--[if !IE]>-->
    </object>
  </article>
<% end %>
